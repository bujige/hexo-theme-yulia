<% if ((theme.site_count.enable && (theme.site_count.site_uv || theme.site_count.site_pv)) || (theme.page_read_count.enable && theme.page_read_count.page_pv)) { %>
  <script src="https://busuanzi.ibruce.info/busuanzi/2.3/busuanzi.pure.mini.js"></script>
<% } %>

<footer id="footer">
  <div class="outer">
    <div id="footer-info">
    	<div class="footer-left">
        &copy; 
        <% var newDate = date(new Date(), 'YYYY'); %>
        <% if(theme.footer.since && !isNaN(theme.footer.since) && theme.footer.since < newDate) { %><%- theme.footer.since %>-<% } %><%-newDate%>
        <%= theme.footer.copyright || config.author || config.title %>
        <% if(theme.footer.icp) { %>
          &copy;
          <a href="http://www.beian.miit.gov.cn/" target="_blank"><%-theme.footer.icp%></a>
        <% } %>
    	</div>
    	<div class="footer-right">
    		<a href="http://hexo.io/" target="_blank">Hexo</a>  Theme <a href="https://github.com/bujige/hexo-theme-yulia" target="_blank">Yulia</a> by WorkingBoy
    	</div>
      <% if(theme.site_count.enable) { %>
        <div class="footer-center">
          <% if (theme.site_count.site_uv) { %>
            <span class="busuanzi-count"><%- theme.site_count.site_uv_header %><span class="busuanzi-value" id="busuanzi_value_site_uv"></span><%- theme.site_count.site_uv_footer %></span>
          <% } %>
          <% if (theme.site_count.site_uv && theme.site_count.site_pv) { %>
            <span class="post-meta-divider" >|</span>
          <% } %>
          <% if (theme.site_count.site_pv) { %>
            <span class="busuanzi-count"><%- theme.site_count.site_pv_header %><span class="busuanzi-value" id="busuanzi_value_site_pv"></span><%- theme.site_count.site_pv_footer %></span>
          <% } %>
        </div>
      <% } %>
    </div>
  </div>
</footer>